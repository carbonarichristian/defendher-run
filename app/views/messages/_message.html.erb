<div class="message <%= 'my-message' if message.user_id == current_user.id %>" id="message-<%= message.id %>">
  <div class="message-bubble">
    <small>
      <strong><%= message.user.first_name %></strong>
      <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
    </small>
    <p><%= message.content %></p>
  </div>
</div>
